generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id         String      @id @default(cuid())
  firebase_uid    String      @unique
  username        String?     @unique
  email           String      @unique
  first_name      String
  last_name       String
  status          UserStatus
  role            UserRole

  pfp_public_id   String?
  profilePic      ProfilePic? @relation(fields: [pfp_public_id], references: [pfp_public_id])

  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

}

model ProfilePic {
  pfp_public_id   String   @id
  pfp_url         String

  users           User[]
}

enum UserRole {
  USER
  ADMIN
}

enum UserStatus {
  ACTIVE
  INACTIVE
}
